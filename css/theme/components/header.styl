.header
    padding: 30px 0
    transition: all .2s ease

    @media media-max-lg
        padding: 15px 0

    .scrolling &
        padding: 10px 0

    &-container
        position: sticky
        top: 0
        box-shadow: none

        .scrolling &
            box-shadow: 0 1px 4px rgba(0, 0, 0, .2)