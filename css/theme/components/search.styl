.search
    @media media-min-sm
        position: relative

        &:before
            position: absolute
            width: 100%
            height: 100%
            border: solid 1px #e5e5e5
            border-radius: 5px
            content: ''
            transform: skewX(-5deg)

        &__form
            margin: 2px
            clip-path: url('#z-bow')

        &__input[type='search']
            overflow: hidden
            border: 0
            background: none
            box-shadow: none

        &__button
            background: none
            box-shadow: none
            color: var(--primary)

            .ico
                width: 18px
                height: 18px
                fill: currentColor

    @media media-max-sm
        &__button
            border-radius: 5px

        .header &__hide
            display: flex
            align-items: center
            height: 70px

        .header &.on
            .search__input
                height: 74px
                border-radius: 0
